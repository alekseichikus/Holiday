<?xml version="1.0" encoding="utf-8"?>
<resources>
  <style name="Button.Base" parent="Widget.MaterialComponents.Button">
    <item name="android:insetTop">0dp</item>
    <item name="android:insetBottom">0dp</item>
    <item name="android:insetLeft">0dp</item>
    <item name="android:stateListAnimator">@null</item>
    <item name="android:insetRight">0dp</item>
    <item name="elevation">0dp</item>
    <item name="android:padding">16dp</item>
    <item name="cornerRadius">8dp</item>
    <item name="iconSize">24dp</item>
    <item name="iconGravity">textStart</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:textAppearance">@style/TextDefault</item>
  </style>

  <style name="Button.Base.Gray">
    <item name="android:textColor">@color/backgroundFill</item>
    <item name="android:textAlignment">center</item>
    <item name="iconTint">@color/backgroundFill</item>
    <item name="iconPadding">12dp</item>
    <item name="iconSize">20dp</item>
    <item name="android:textAppearance">@style/TextDefault</item>
    <item name="cornerRadius">8dp</item>
    <item name="backgroundTint">@color/textTertiary</item>
  </style>

  <style name="Button.Base.Text">
    <item name="android:textColor">@color/textPrimary</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textAlignment">center</item>
    <item name="android:textAppearance">@style/TextDefault</item>
    <item name="cornerRadius">8dp</item>
    <item name="backgroundTint">@color/transparent</item>
  </style>
</resources>