<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/tvDay"
        style="@style/TextDescription"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_circle"
        android:foreground="@drawable/background_ripple_circle"
        android:gravity="center"
        tools:text="1"
        android:textColor="@color/textPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvCountHolidays"
        style="@style/TextDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_border_8"
        android:backgroundTint="@color/backgroundBlue"
        android:paddingHorizontal="6dp"
        android:textColor="@color/textSecondary"
        app:layout_constraintBottom_toBottomOf="@id/tvDay"
        app:layout_constraintEnd_toEndOf="@+id/tvDay"
        tools:text="1" />
</androidx.constraintlayout.widget.ConstraintLayout>