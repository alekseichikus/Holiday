<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    tools:background="@color/backgroundFill">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_lights_holiday"
        app:tint="@color/textTertiary" />

    <TextView
        android:id="@+id/tvHolidayEmptyTitle"
        style="@style/TextDefault"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="@string/current_day_empty_first" />

    <TextView
        android:id="@+id/tvHolidayEmptyDate"
        style="@style/TextTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginVertical="8dp"
        android:gravity="center_horizontal"
        android:text="24\nянваря"
        android:textSize="32dp" />

    <TextView
        style="@style/TextDefault"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="12dp"
        android:gravity="center_horizontal"
        android:text="@string/current_day_empty_ыусщтв" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/mbMoveToDate"
        style="@style/Button.Base.Gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        android:text="@string/go_to"
        app:backgroundTint="@color/backgroundGreen"
        app:icon="@drawable/ic_long_arrow_right"
        app:iconGravity="textEnd"
        app:layout_constraintTop_toBottomOf="@+id/llTitle" />
</LinearLayout>
